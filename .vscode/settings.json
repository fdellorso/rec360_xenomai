{
    "files.watcherExclude": {
        // "**/.git/objects/**": true,
        // "**/.git/subtree-cache/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true,
        "**/.hg/**": true,
        "**/kernel/**": true,
        "**/kernel-build/**": true,
        "**/kernel-output/**": true,
        "**/xenomai/**": true,
        "**/xenomai-build/**": true,
        "**/xenomai-tools/**": true,
        "**/tools/**": true
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "C_Cpp.intelliSenseCacheSize": 1024,
